<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vpn_home_city"
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@drawable/servers_item_background"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_servers_src"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:background="@mipmap/fast" />

    <TextView
        android:id="@+id/item_servers_tv"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Super Fast Servers"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />
    <ImageView
        android:id="@+id/item_servers_check"
        android:layout_marginEnd="24dp"
        android:background="@mipmap/servers_no_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>